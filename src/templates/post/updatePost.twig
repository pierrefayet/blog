{% extends 'layout/layout.twig' %}
{% block content %}
    {% if errorMessages is defined and errorMessages is not empty %}
        <ul class="alert alert-danger">
            {% for error in errorMessages %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <div class="container">
        <h2 class="mt-5">Modifier l'article</h2>
        <form method="POST" action="index.php?method=update&controller=PostController&postId={{ post.id }}">
            <div class="form-group">
                <label for="title">Titre de l'article :</label>
                <textarea class="form-control" id="title" name="title">{{ post.title }} required </textarea>
            </div>
            <div class="form-group">
                <label for="intro">Chap√¥</label>
                <textarea class="form-control" id="intro" name="intro">{{ post.intro }} required</textarea>
            </div>
            <div class="form-group">
                <label for="content">Contenu de l'article :</label>
                <textarea class="form-control" id="content" name="content">{{ post.content }} required</textarea>
            </div>
            <div class="form-group">
                <label for="author">Auteur</label>
                <textarea class="form-control" id="author" name="author">{{ post.author }} required </textarea>
            </div>
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications required</button>
        </form>
    </div>
{% endblock %}
