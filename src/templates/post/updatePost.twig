{% extends 'layout/layout.twig' %}
{% block content %}
    <div class="container">
        <h2 class="mt-5">Modifier l'article</h2>
        <form method="POST" action="index.php?method=update&controller=UpdatePostController&{{ posts.id }}">
            <div class="form-group">
                <label for="title">Titre de l'article :</label>
                <textarea class="form-control" id="title" name="title">{{ posts.titre }}</textarea>
            </div>
            <div class="form-group">
                <label for="content">Contenu de l'article :</label>
                <textarea class="form-control" id="content" name="content">{{ posts.content }}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        </form>
    </div>
{% endblock %}
