{% extends 'layout/layout.twig' %}
{% block content %}
    {% if errorMessage is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            {{ errorMessage }}
        </div>
    {% elseif successMessage is defined %}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{ successMessage }}
        </div>
    {% elseif errorMessages is defined %}
        <ul class="alert alert-danger">
            {% for error in errorMessages %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <div class="container">
        <h1 class="text-center">Ajouter un nouvel article</h1>
        <form method="POST" action="index.php?method=addPost&controller=PostController">
            <div class="form-group">
                <label for="title">Titre de l'article</label>
                <input type="text" class="form-control" id="title" name="title" >
            </div>
            <div class="form-group">
                <label for="intro">Chap√¥</label>
                <input type="text" class="form-control" id="intro" name="intro" required>
            </div>
            <div class="form-group">
                <label for="content">Contenu de l'article</label>
                <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
            </div>
            <div class="form-group">
                <label for="author">Auteur</label>
                <input type="text" class="form-control" id="author" name="author" required>
            </div>
            <input type="hidden" value="{{ csrf }}" name="csrf">
            <button type="submit" class="btn btn-primary mt-4 mb-4">Ajouter</button>
        </form>
    </div>
{% endblock %}
