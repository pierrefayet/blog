{% extends 'layout/layout.twig' %}
{% block content %}
    {% if params.errorMessage is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            {{ params.errorMessage }}
        </div>
    {% elseif errorMessage is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            {{ errorMessage }}
        </div>
    {% endif %}
    <div class="container">
        <h1>Commentaire</h1>
        {% if unAuthorize is not defined or false == unAuthorize  %}
        <form method="POST">
            <div class="form-group">
                <label for="content">Contenu du commentaire</label>
                <textarea class="form-control" id="content" name="content" rows="5" required>
                    {% if comment is defined %}
                        {{ comment.content }}
                    {% endif %}</textarea>
            </div>
            <div class="mt-2 mb-2">
                {% if comment is defined %}
                    <input type="submit" class="btn btn-primary" value="Modifier">
                    <a href="index.php?method=deleteComment&controller=commentController&postId={{ comment.id }}"
                       class="btn btn-outline-danger mb">Supprimer</a>
                {% else %}
                    <input type="hidden" value="{{ csrf_token }}" name="csrf">
                    <input type="submit" class="btn btn-primary" value="Ajouter" />
                {% endif %}
            </div>
        </form>
        {% endif %}
    </div>
    {% if successMessage is defined %}
        <div class="alert alert-success">{{ successMessage }}</div>
    {% endif %}

    {% if errorMessage is defined %}
        <div class="alert alert-danger">{{ errorMessage }}</div>
    {% endif %}
{% endblock %}
