{% extends 'layout/layout.twig' %}
{% block content %}
    {% if params.errorMessage is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            {{ params.errorMessage }}
        </div>
    {% elseif errorMessage is defined %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            {{ errorMessage }}
        </div>
    {% endif %}
    <h2 class="text-center">Modification du profil</h2>
    <div class="container">
        <form  class="mt-5 mb-5" method="POST">
            <div class="form-group">
                <label for="username">Nom de l'utilisateur</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type=password class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <input type="hidden" value="{{ csrf }}" name="csrf">
            <button type="submit" class="btn btn-primary mt-2">Mettre Ã  jour</button>
        </form>
    </div>
{% endblock content %}
